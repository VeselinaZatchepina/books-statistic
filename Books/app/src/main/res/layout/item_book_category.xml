<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/cardView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/item_book_category_card_view_height"
                                    android:layout_marginBottom="@dimen/item_book_category_card_margin_bottom"
                                    app:cardBackgroundColor="@color/cardBackground"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemImageIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_book_category_icon_margin_start"
            android:layout_weight="1"
            android:src="@drawable/ic_local_library_white_24dp"/>

        <TextView
            android:id="@+id/itemCategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_book_category_name_margin_start"
            android:layout_weight="6"
            android:textColor="@android:color/white"
            tools:text="PRIORITY"/>

        <TextView
            android:id="@+id/itemBookCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_book_category_book_count_margin_end"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@android:color/white"
            tools:text="2"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
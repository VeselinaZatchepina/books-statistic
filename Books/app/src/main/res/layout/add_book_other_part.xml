<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/add_book_other_part_card_margin_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/add_book_other_part_linear_margin"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/addPageCountInputLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/addPageCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_book_other_part_page_count_hint"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/addRepeatCountInputLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/add_book_other_part_repeat_count_margin_top">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/addRepeatCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_book_other_part_repeat_count_hint"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>

        <RatingBar
            android:id="@+id/addRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/add_book_other_part_margin_bottom"
            android:layout_marginTop="@dimen/add_book_other_part_rating_margin_top"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
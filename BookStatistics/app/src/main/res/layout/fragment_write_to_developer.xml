<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="16dp"
              android:orientation="vertical">

    <EditText
        android:id="@+id/input_text_for_developer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_for_developer_height"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom"
        android:background="@android:color/white"
        android:gravity="top"
        android:hint="@string/write_to_developer_text_hint"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/write_to_developer_button_text"/>

</LinearLayout>
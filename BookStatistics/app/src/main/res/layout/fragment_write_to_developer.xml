<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="16dp"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardUseCompatPadding="true">

        <EditText
            android:id="@+id/input_text_for_developer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_for_developer_height"
            android:background="@android:color/white"
            android:gravity="top"
            android:hint="@string/write_to_developer_text_hint"
            android:inputType="textMultiLine"
            android:padding="@dimen/edit_text_padding"/>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/send_button_circle_border"
        android:text="@string/write_to_developer_button_text"
        android:textColor="@android:color/white"/>

</LinearLayout>
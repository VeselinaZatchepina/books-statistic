<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Toolbar style -->
    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- CurrentQuotePagerActivity text style -->
    <style name="TextStyleBlack" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Empty recycler view item style -->
    <style name="TextStyleWhite" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- Navigation drawer style -->
    <style name="TextAppearanceForNav">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

     <!-- Launch style
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style> -->

    <!-- Custom theme -->
    <style name="AppTheme1" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background1</item>
    </style>

    <style name="AppTheme2" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background2</item>
    </style>

    <style name="AppTheme3" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background3</item>
    </style>









</resources>
